{
	"name": "cjp2600/bim-core",
	"description": "Bitrix db migration core libs",
	"keywords": ["bitrix", "db", "migration"],
	"license": "MIT",
 	"authors": [
	{
		"name": "Stanislav Semenov",
		"email": "icjp2600@gmail.com"
	},
	{
		"name": "Sergey Ansupov",
		"email": "sanstupov@indigo-trg.com"
	}
	],
	"require": {
		"maximebf/consolekit": ">=1.0.0",
        	"wp-cli/php-cli-tools":"*",
        	"noodlehaus/config":"*"
	},
	"autoload": {
		"classmap": [
		  	"lib",
			"lib/db",
			"lib/cmd"
		]
	},
	"scripts": {
	  "post-install-cmd": [
		"php -r 'file_put_contents(\"bim\", \"#!/usr/bin/php \n<?php \n include __DIR__ . \"/vendor/autoload.php\"; \n Bim/Migration::init(); \", FILE_APPEND | LOCK_EX);'"
	  ]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}

